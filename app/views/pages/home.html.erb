<div class="container">
  <% @places.each do |place| %>
  <div class="card post-grid">
    <div class="card-title">
      <%= place.description %>
    </div>
    <div class="card-body">
      <%= place.lat %>
      <%= place.long %>
    </div>
    <div class="card-footer">
      Shared by: <%= place.user.username %> <%= get_informative_time(place.created_at) %>
    </div>
  </div>
  <% end %>

  <%= paginate @places %>
</div> <!-- container -->